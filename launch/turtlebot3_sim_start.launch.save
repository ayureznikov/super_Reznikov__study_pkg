<?xml version="1.0"?>
<launch>
    <arg name="model" default="waffle"/>
    <arg name="rviz" default="false"/>
    <arg name="gazebo_gui" default="true"/>
    
    <!-- Запуск мира с TurtleBot3 -->
    <include file="$(find super_Reznikov__study_pkg)/launch/turtlebot3_world.launch">
        <arg name="model" value="$(arg model)"/>
        <arg name="gazebo_gui" value="$(arg gazebo_gui)"/>  <!-- ПЕРЕДАЕМ АРГУМЕНТ -->
    </include>
    
    <!-- Robot State Publisher для публикации TF -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="50.0"/>
    </node>
    
    <!-- Запуск Rviz с конфигурацией -->
    <node if="$(arg rviz)" pkg="rviz" type="rviz" name="rviz" 
          args="-d $(find super_Reznikov__study_pkg)/rviz/sim_initial.rviz"/>
</launch>