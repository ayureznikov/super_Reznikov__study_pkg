<?xml version="1.0"?>
<launch>
    <arg name="model" default="waffle"/>
    <arg name="rviz" default="false"/>
    <arg name="gazebo_gui" default="true"/>
    
    <!-- Запуск мира с TurtleBot3 -->
    <include file="$(find super_Reznikov__study_pkg)/launch/turtlebot3_world.launch">
        <arg name="model" value="$(arg model)"/>
        <arg name="gazebo_gui" value="$(arg gazebo_gui)"/>
    </include>
    
    <!-- Robot State Publisher для публикации TF из URDF -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="30.0"/>
        <param name="tf_prefix" value=""/>
    </node>
    
    <!-- Узел для публикации joint states (если нужно) -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
    
    <!-- Запуск Rviz с конфигурацией -->
    <node if="$(arg rviz)" pkg="rviz" type="rviz" name="rviz" 
          args="-d $(find super_Reznikov__study_pkg)/rviz/sim_initial.rviz"/>
</launch>